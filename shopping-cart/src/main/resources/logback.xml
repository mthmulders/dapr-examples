<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %logger{36} %m%n</pattern>
        </encoder>
    </appender>

    <logger name="it.mulders" level="debug" /> 

    <root level="info">
        <appender-ref ref="stdout" />
    </root>
</configuration>